---
import BaseLayout from "./BaseLayout.astro";
import TagsNav from "../components/TagsNav.astro";
import { fade } from "astro:transitions";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <p>Published on: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <p transition:animate={fade({ duration: "2s" })}>
    <em>{frontmatter.description}</em>
  </p>
  <p>Written by <a href="/about/">{frontmatter.author}</a></p>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
  <slot />
  <TagsNav tags={frontmatter.tags} />
</BaseLayout>
